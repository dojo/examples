{
	"version": "2.0.0",
	"compilerOptions": {
		"declaration": false,
		"module": "umd",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"outDir": "_build/",
		"baseUrl": "node_modules",
		"paths": {},
		"removeComments": false,
		"sourceMap": true,
		"target": "es6",
		"moduleResolution": "classic"
	},
	"include": [
		"./typings/index.d.ts",
		"./src/**/*.ts",
		"./tests/**/*.ts"
	]
}
