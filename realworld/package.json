{
	"name": "realworld-app",
	"version": "1.0.0",
	"main": "src/main.tsx",
	"scripts": {
		"dev": "dojo build -m dev -s -w memory",
		"build": "dojo build",
		"build:ghpages": "dojo build --dojorc .dojorc-ghpages",
		"prettier": "prettier --write \"{docs,src,tests}/**/*.{ts,tsx,md}\"",
		"test": "dojo build -m unit && dojo test",
