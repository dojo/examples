	},
	"dependencies": {
		"@dojo/framework": "^6.0.0",
		"snarkdown": "^1.2.2",
		"tslib": "^1.10.0"
	},
	"devDependencies": {
		"@dojo/cli": "^6.0.0",
		"@dojo/cli-build-app": "^6.0.0",
		"@dojo/cli-test-intern": "^6.0.0",
		"@types/glob": "~5.0.0",
		"@types/grunt": "~0.4.0",
		"@types/marked": "^0.3.0",
		"@types/node": "^6.0.46",
		"@types/sinon": "^1.16.35",
		"prettier": "1.18.2",
		"sinon": "^2.0.0",
		"tslint": "5.2.0",
		"typescript": "~3.4.5"
	},
	"prettier": {
		"singleQuote": false,
		"tabWidth": 4,
		"useTabs": true,
