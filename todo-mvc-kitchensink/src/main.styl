.card-list {
	display: flex;
	flex-direction row;
	flex-wrap: wrap;
	justify-content: space-between;
	background-color: #f6f6f6;
	padding: 4px;

	&.empty {
		padding: 0;
	}

	li {
		width: 32%;
		margin: 2px;
		flex-grow: 1;
		border: none;

		&.card {
			border: 1px solid #ededed;
			background-color: white;
			box-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);

			.header {
				height: 40px;
				border-bottom: 1px solid #ededed;

				.toggle {
					left: 0;
					top: 0;
					margin: 0;
					transform: scale(50%);
				}

				.destroy {
					right: 0;
					top: -3px;
					margin: 0;
					opacity: 1;
				}
			}

			label {
				font-size: 17px;
				padding: 15px;
				word-break: break-word;
				margin: 0;
			}
		}

		&.empty-filler {
			width: 32%;
			height: 0;
			margin: 0 2px;
		}
	}
}

body {
	position: relative;
}

.todo-details {
	.backdrop {
		position: fixed;
		left: 0;
		top: -0;
		overflow: hidden;
		width: 100%;
		height: 100%;
		z-index: 99;
		background-color: rgba(255, 255, 255, 0.75);
	}

	.modal {
		position: fixed;
		top: 230px;
		left: 50%;
		width: 600px;
		transform: translate(-50%, -50%);
		z-index: 100;
		background-color: #fafafa;
		padding: 16px;
		border-radius: 6px;
		box-shadow: 0 0 2px rgba(0, 0, 0, 0.2);

		.close {
			&:after {
				position: absolute;
				top: 8px;
				right: 8px;
				content: 'X';
				cursor: pointer;
			}
		}

		header {
			font-weight: 300;
			font-size: 32px;
			margin-bottom: 12px;
		}

		section {
			textarea {
				width: calc(100% - 24px);
				height: 78px;
				padding: 12px;
				margin: 0;
				font-size: 24px;
				font-weight: inherit;
				color: inherit;
				border: 1px solid #ededed;
				resize: none;
			}
		}

		.last-updated {
			float: left;
			line-height: 40px;
		}

		.toggle {
			height: 40px;
			text-align: center;
			width: 40px;
			margin: auto 0;
			border: none;
			-webkit-appearance: none;
			appearance: none;
			background: none;
			float: right;
		}
	}
}

.searchbar {
	position: relative;

	input.search {
		width: calc(100% - 16px);
		color: inherit;
		padding: 12px;
		border: none;
		background-color: transparent;
		font: inherit;
		font-size: 18px;
		padding-left: 60px;
	}
	.icon {
		width: 32px;
		height: 32px;
		position: absolute;
		top: 10px;
		left: 16px;
	}
}

