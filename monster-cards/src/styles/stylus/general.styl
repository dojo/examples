body, html {
	width: 100%;
	height: 100%;
	font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
	font-weight: 300;
}

main {
	top: header-height;
	left: 0;
	right: 0;
}

.jumbotron {
	background-color: #CCCCCC;
	line-height: 450px;
	height: 450px;
	text-align: center;
}

.jumbotron-layout {
	position: absolute;
	width: 100%;
}

.jumbotron-image {
	position: relative;
	vertical-align: middle;
	max-height: 200px;
}

.pull-left {
	float: left;
}

.pull-right {
	float: right;
}

.inline-list {
	height: 100%;
	display: inline-block;
	overflow: hidden;
	li {
		list-style: none;
		display: inline-block;
	}
}

@media (max-width: size-portrait-tablet) {
	main {
		top: 0;
		bottom: header-height;
	}
}
