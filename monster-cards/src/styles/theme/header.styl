header {
	background-color: header-background;
	height: header-height;
	padding: 0 side-padding;

	.search {
		padding: 0 16px;
	}

	li {
		img {
			padding-right: 35px;
		}

		a {
			padding: 0 16px;
			text-align: center;
			text-decoration: none;
			color: inherited;

			font-family: 'Arial-BoldMT', 'Arial Bold', 'Arial';
			font-weight: 700;
			font-style: normal;
			font-size: 20px;

			&:hover:not(.active) {
				background-color: darken(header-background, 10%);
			}
			&:visited, &:active, &:link {
				text-decoration: none;
				color: inherit;
			}
		}

		a,
		i:before {
			line-height: header-height;
		}
	}

	input {
		border: none;
		font-size: 10pt;
		color: input-color;
		border-radius: 10px;
		outline: none;
		margin-right: 5px;
	}
}
