header {
	background-color: header-background;
	height: header-height;
	padding: 0 side-padding;
	position: fixed;
	left: 0;
	right: 0;
	z-index: 50;

	.search {
		padding: 0 16px;
	}

	li {
		height: 100%;
		vertical-align: top;
		img {
			cursor: pointer;
			padding-right: 35px;
		}

		a {
			padding: 0 16px;
			display: inline-block;
			text-align: center;
			text-decoration: none;
			color: inherited;
			text-transform: uppercase;

			font-family: 'Arial-BoldMT', 'Arial Bold', 'Arial';
			font-weight: 700;
			font-style: normal;
			font-size: 20px;

			&:hover:not(.active) {
				background-color: darken(header-background, 10%);
			}
			&:visited, &:active, &:link {
				text-decoration: none;
				color: inherit;
			}
		}

		a,
		i:before {
			line-height: header-height;
		}
	}

	input {
		border: none;
		font-size: 10pt;
		color: input-color;
		border-radius: 10px;
		outline: none;
		margin-right: 5px;
	}
}

@media (max-width: size-portrait-tablet) {
	 header {
		bottom:0px;
	}
}
